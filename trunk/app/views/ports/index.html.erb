<% # @page_title="Ports" %>
<% @mselect_ports=1 %>
<% @table = @ports %>
<% @action = "index" %>
<% @cont = "ports" %>

<%= render :partial => 'layouts/page_count' %>

<table>
<thead>
  <tr>
    <th scope="col">
      <%= sort_link("Test Area", "session_test_area") %>
      <%= filterx_icon("Remove filter on #{session[:test_area]}", session[:test_area], :test_area, {:controller => 'test_areas', :action => 'set', :id => 'all'}) %>
    </th>

    <th scope="col"><%= sort_link("Host", "ip_address") %>
      <%= filterx_icon("Remove filter on host", @url_params[:host_id_v], :host_id_v, {:controller => @cont}) %>
    </th>

    <th scope="col"><%= sort_link("Port", "port") %>
      <%= filterx_icon("Remove filter on port #{@url_params[:port_v]}", @url_params[:port_v], :port_v, {:controller => @cont}) %>
    </th>

    <th scope="col"><%= sort_link("Trans Proto", "transport_protocol") %>
      <%= filterx_icon("Remove filter on #{@url_params[:trans_v]}", @url_params[:trans_v], :trans_v, {:controller => @cont}) %>
    </th>
  </tr>
</thead>

<tbody>
<%
odd_or_even = 0
for port in @ports
    odd_or_even = 1 - odd_or_even
%>
  <tr class="odd<%=h odd_or_even %>">
    <td><%=h port.test_area_name %>
        <%= filter_icon("Show only #{port.test_area_name}", session[:test_area], {:controller => 'test_areas', :action => 'set', :id => port.test_area_id}) %>
    </td>

    <td><%= link_to_host(port.ip_address, {:controller => 'hosts', :action => 'showports', :id => port.host_id}) %>
        <%= filter_icon("Show only #{port.ip_address}", @url_params[:host_id_v], {:controller => 'ports', :host_id_v => port.host_id}) %>
    </td>

    <td><%=h port.port %>
        <%= filter_icon("Show only port #{port.port}", @url_params[:port_v], {:controller => 'ports', :port_v => port.port}) %>
    </td>

    <td><%=h port.transport_protocol %>
        <%= filter_icon("Show only #{port.transport_protocol} ports", @url_params[:trans_v], {:controller => 'ports', :trans_v => port.transport_protocol}) %>
    </td>

  </tr>
<% end %>
</tbody>
</table>

<%= render :partial => 'layouts/page_count' %>
