<% # @page_title = "Test Areas" %>
<% @mselect_testareas=1 %>
<% @table = @test_areas %>
<% @action = "index" %>
<% @cont = "test_areas" %>

<%= render :partial => 'layouts/page_count' %>

<table>
<thead>
  <tr>
    <th scope="col">
      <%= sort_link("Test Area", "session_test_area") %>
    </th>
  </tr>
</thead>

<tbody>
<%
odd_or_even = 0
for test_area in @test_areas
    odd_or_even = 1 - odd_or_even
%>
  <tr class="odd<%=h odd_or_even %>">
    <% if session[:test_area] == test_area.id %>
      <td><%= link_to test_area.name, :controller => "test_areas", :action => "set", :id => test_area.id %> <b>(CURRENLTY SELECTED)</b>
    <% else %>
      <td><%= link_to test_area.name, :controller => "test_areas", :action => "set", :id => test_area.id %>
    <% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<%= render :partial => 'layouts/page_count' %>
